<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_doctor"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvSede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sede"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Contenedor para "Ver Detalle" con icono y texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvVerDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Detalle"
                android:textColor="#ffa59e"
                android:textStyle="bold"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/iconVerDetalle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_add_icon" /> <!-- Usa un Ã­cono + en drawable -->
        </LinearLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>