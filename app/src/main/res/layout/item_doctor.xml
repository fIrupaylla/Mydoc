<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Doctor Image -->
    <ImageView
        android:id="@+id/iv_doctor_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_doctor_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Specialty and Office Number -->
        <TextView
            android:id="@+id/tv_doctor_specialty_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty - Office #123"
            android:textSize="14sp"
            android:textColor="#666" />
    </LinearLayout>

    <!-- Availability Icon -->
    <ImageView
        android:id="@+id/iv_availability"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_available" />

</LinearLayout>
