<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleCitaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar para el botón de "Atrás" -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPink"
            android:title="Detalle de Cita"
            android:titleTextColor="@android:color/white"
            tools:ignore="ExtraText" />

        <!-- Contenido principal de la actividad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Información de la cita con imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDoctorDetalle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_doctor"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNombreDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Carrillo"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvFechaDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 05/10" />

                    <TextView
                        android:id="@+id/tvHoraDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora: 10:00 a.m." />

                    <TextView
                        android:id="@+id/tvSedeDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sede: La Molina" />
                </LinearLayout>
            </LinearLayout>

            <!-- Notas de la cita -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notas:"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvNotasDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seguir instrucciones: \nxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>